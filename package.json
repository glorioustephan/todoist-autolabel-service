{
  "name": "todoist-autolabel-service",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/service.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/service.js",
    "dev": "tsx src/service.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop todoist-autolabel",
    "pm2:restart": "pm2 restart todoist-autolabel",
    "pm2:logs": "pm2 logs todoist-autolabel",
    "pm2:status": "pm2 status"
  },
  "keywords": ["todoist", "autolabel", "claude", "classification"],
  "author": "",
  "license": "ISC",
  "description": "Automatic task labeling service for Todoist using Claude AI",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@doist/todoist-api-typescript": "^3.0.3",
    "better-sqlite3": "^11.3.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.5.0",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "happy-dom": "^15.7.4",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
