<?xml version="1.0" encoding="UTF-8"?>
<life_taxonomy version="4.0">
  <metadata>
    <description>Life taxonomy based on Obsidian Areas folder structure with tag mappings</description>
    <last_updated>2025-10-15</last_updated>
    <framework>Direct mapping from 03 - Areas folder hierarchy with lowercase-dashed tags</framework>
  </metadata>

  <!-- INBOX & ARCHIVE -->
  <area name="Inbox" tag="inbox" />
  
  <area name="Archive" tag="archive" />

  <!-- ATTACHMENTS -->
  <area name="Attachments" tag="attachments">
    <category name="Documents" tag="documents" />
    <category name="Images" tag="images" />
  </area>

  <!-- ENVIRONMENT -->
  <area name="Environment" tag="environment">
    <category name="Home &amp; Property" tag="home-and-property" />
    <category name="Vehicles" tag="vehicles" />
  </area>

  <!-- FINANCIAL -->
  <area name="Financial" tag="financial">
    <category name="Taxes" tag="taxes" />
    <category name="Planning &amp; Budgeting" tag="planning-and-budgeting" />
    <category name="Invoicing, Billing, &amp; Records" tag="invoicing-billing-and-records" />
    <category name="Portfolio" tag="portfolio" />
  </area>

  <!-- ORGANIZING -->
  <area name="Organizing" tag="organizing" />

  <!-- PRODUCTIVITY -->
  <area name="Productivity" tag="productivity" />

  <!-- SPIRITUALITY -->
  <area name="Spirituality" tag="spirituality">
    <category name="Yoga" tag="yoga" />
    <category name="Zen" tag="zen" />
    <category name="Chaplaincy" tag="chaplaincy" />
  </area>

  <!-- WRITING -->
  <area name="Writing" tag="writing">
    <category name="Books" tag="books" />
    <category name="Journaling" tag="journaling" />
    <category name="Poetry" tag="poetry" />
    <category name="Songwriting" tag="songwriting" />
  </area>

  <!-- HOLISTIC WELLNESS -->
  <area name="Holistic Wellness" tag="holistic-wellness">
    <category name="Mental &amp; Emotional Health" tag="mental-health">
      <subcategory name="Emotional Processing" />
      <subcategory name="Mindfulness &amp; Meditation" tag="meditation" />
    </category>

    <category name="Lab Work" tag="lab-work" />
    <category name="Medical Records" tag="medical-records" />

    <category name="Physical Health" tag="physical-health">
      <subcategory name="Diet" tag="diet">
        <subitem name="Meal Planning" tag="meal-planning" />
      </subcategory>
      <subcategory name="Exercise" tag="exercise">
        <subitem name="Cardiovascular Training" tag="cardiovascular-training" />
        <subitem name="Strength Training" tag="strength-training" />
        <subitem name="Yoga Practice" tag="yoga" />
      </subcategory>
      <subcategory name="Medication" tag="medication" />
      <subcategory name="Self-Care Practices" tag="self-care" />
      <subcategory name="Supplementation" tag="supplementation" />
    </category>

    <category name="Spiritual Well-being" tag="spirituality">
      <subcategory name="Chaplaincy Development" tag="chaplaincy" />
      <subcategory name="Eastern Practices" tag="spirituality" />
      <subcategory name="Zen Practice" tag="zen" />
    </category>
  </area>

  <!-- LEARNING & EDUCATION -->
  <area name="Learning &amp; Education" tag="education">
    <category name="Creative Projects" tag="creative-projects" />
    <category name="Formal Education" tag="education" />
    <category name="Knowledge Building" tag="knowledge-building" />
    <category name="Personal Development" tag="personal-development" />
    <category name="Reading &amp; Research" tag="research">
      <subcategory name="Reading" tag="reading" />
      <subcategory name="Research" tag="research" />
    </category>
    <category name="Skill Acquisition" tag="education" />
  </area>

  <!-- LEGAL & ADMINISTRATIVE -->
  <area name="Legal &amp; Administrative" tag="legal">
    <category name="Contracts &amp; Documents" tag="contracts">
      <subcategory name="Contracts" tag="contracts" />
      <subcategory name="Documents" tag="documents" />
    </category>
    <category name="Estate Planning" tag="estate-planning" />
    <category name="Government Affairs" tag="legal" />
    <category name="Insurance" tag="insurance" />
    <category name="Taxes" tag="taxes" />
  </area>

  <!-- LEISURE & ENTERTAINMENT -->
  <area name="Leisure &amp; Entertainment" tag="entertainment">
    <category name="Audio &amp; Movies" tag="entertainment">
      <subcategory name="Movies" tag="movies" />
      <subcategory name="Music" tag="music" />
    </category>
    <category name="Travel &amp; Exploration" tag="travel" />
  </area>

  <!-- LIFE VISION & PLANNING -->
  <area name="Life Vision &amp; Planning" tag="life-vision">
    <category name="Goals &amp; Objectives" tag="goals" />
    <category name="Life Review &amp; Reflection" tag="life-review">
      <subcategory name="Reflection" tag="reflection" />
    </category>
    <category name="Long-term Planning" tag="long-term-planning" />
    <category name="Values &amp; Philosophy" tag="life-vision" />
  </area>

  <!-- PROFESSIONAL CAREER -->
  <area name="Professional Career" tag="professional-career">
    <category name="Co-workers" tag="co-workers" />
    <category name="Professional Development" tag="professional-development" />
    <category name="Initiatives" tag="professional-career" />
    <category name="Plans &amp; Visions" tag="planning" />
    <category name="Process &amp; Tooling Refinement" tag="tooling" />
  </area>

  <!-- RELATIONSHIPS -->
  <area name="Relationships" tag="relationships">
    <category name="Atomic Family" tag="atomic-family">
      <subcategory name="Children" tag="children" />
      <subcategory name="Household Coordination" tag="atomic-family" />
      <subcategory name="Spouse" tag="spouse" />
    </category>
    <category name="Community" tag="community" />
    <category name="Extended Family" tag="extended-family">
      <subcategory name="Extended Relatives" tag="extended-family" />
      <subcategory name="Parents" tag="parents" />
    </category>
    <category name="Friendships" tag="friendships">
      <subcategory name="Close Friends" tag="close-friends" />
      <subcategory name="Social Groups" tag="social-groups" />
    </category>
    <category name="Mentors &amp; Mentees" tag="mentors-and-mentees" />
  </area>

  <!-- TEMPORAL PATTERNS -->
  <temporal_patterns>
    <pattern type="daily" tags="daily-life,meditation,yoga,journaling">
      <sequence name="morning_routine" order="1-12">
        <item>Tongue scraping</item>
        <item>Oil pulling</item>
        <item>Jala Neti</item>
        <item>Facial steam</item>
        <item>Nasya</item>
        <item>Hot shower</item>
        <item>Nauli/Angi Kriya</item>
        <item>Warm water, then lemon</item>
        <item>Ashtanga yoga practice</item>
        <item>Pranayama</item>
        <item>Meditation</item>
        <item>Daily journaling</item>
      </sequence>
    </pattern>

    <pattern type="weekly" tags="zen,planning-and-budgeting,home-and-property,community">
      <item frequency="weekly" tags="zen,meditation">Zazen attendance at Zen Center</item>
      <item frequency="weekly" tags="planning-and-budgeting,financial">Budgeting and transaction review</item>
      <item frequency="weekly" tags="home-and-property">Lawn care and maintenance</item>
      <item frequency="bi-weekly" tags="community">Men's Group attendance</item>
      <item frequency="bi-weekly" tags="meal-planning,diet">Meal planning sessions</item>
    </pattern>

    <pattern type="monthly" tags="relationships,self-care">
      <item frequency="monthly" tags="exercise,travel,spouse">Hike or snowshoeing with spouse</item>
      <item frequency="monthly" tags="self-care">Spa day</item>
    </pattern>

    <pattern type="quarterly" tags="organizing,taxes,children">
      <item frequency="quarterly" tags="children,extended-family">Care package to Jack and Ella</item>
      <item frequency="quarterly" tags="taxes,financial">LLC tax preparation</item>
      <item frequency="quarterly" tags="organizing,home-and-property">Deep house cleaning</item>
      <item frequency="quarterly" tags="diet,meal-planning">Ayurvedic kitchen transition</item>
    </pattern>

    <pattern type="bi-annual" tags="lab-work,portfolio,self-care">
      <item frequency="bi-annual" tags="lab-work,medical-records">Function blood tests</item>
      <item frequency="bi-annual" tags="portfolio,financial">Portfolio rebalancing</item>
      <item frequency="bi-annual" tags="self-care,spirituality">Personal retreat</item>
    </pattern>

    <pattern type="annual" tags="lab-work,taxes">
      <item frequency="annual" tags="lab-work,physical-health">DEXA scan</item>
      <item frequency="annual" tags="taxes,financial">Personal tax preparation</item>
    </pattern>
  </temporal_patterns>

  <!-- CLASSIFICATION MAPPINGS -->
  <classification_mappings>
    <mapping domain="holistic-wellness" category="physical-health" subcategory="exercise">
      <tags>yoga,cardiovascular-training,strength-training,exercise</tags>
      <keywords>yoga, ashtanga, cardiovascular, strength, training, workout, exercise</keywords>
    </mapping>

    <mapping domain="financial" category="planning-and-budgeting">
      <tags>financial,planning-and-budgeting,portfolio,taxes</tags>
      <keywords>budget, cash flow, portfolio, financial, planning, taxes</keywords>
    </mapping>

    <mapping domain="relationships" category="atomic-family">
      <tags>relationships,atomic-family,spouse,children</tags>
      <keywords>spouse, partner, children, family, household</keywords>
    </mapping>

    <mapping domain="professional-career" category="professional-development">
      <tags>professional-career,professional-development,education,tooling</tags>
      <keywords>coaching, technical, skills, education, development, career, tooling</keywords>
    </mapping>

    <mapping domain="holistic-wellness" category="spiritual-well-being">
      <tags>spirituality,zen,chaplaincy,meditation,yoga</tags>
      <keywords>zen, chaplaincy, eastern, meditation, spiritual, yoga, mindfulness</keywords>
    </mapping>

    <mapping domain="writing">
      <tags>writing,books,journaling,poetry,songwriting,creative-projects</tags>
      <keywords>writing, books, journaling, poetry, songwriting, creative, literature</keywords>
    </mapping>

    <mapping domain="entertainment">
      <tags>entertainment,movies,music,travel</tags>
      <keywords>entertainment, leisure, movies, music, audio, video, travel, relaxation</keywords>
    </mapping>

    <mapping domain="organizing">
      <tags>organizing,productivity,home-and-property</tags>
      <keywords>organization, cleanliness, productivity, time management, cleaning, organizing</keywords>
    </mapping>

    <mapping domain="legal">
      <tags>legal,contracts,documents,estate-planning,insurance,taxes</tags>
      <keywords>legal, contracts, documents, estate, insurance, taxes, administrative</keywords>
    </mapping>

    <mapping domain="life-vision">
      <tags>life-vision,goals,planning,life-review,reflection,long-term-planning</tags>
      <keywords>goals, vision, planning, reflection, values, philosophy, objectives</keywords>
    </mapping>
  </classification_mappings>
</life_taxonomy>