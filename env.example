# Todoist Autolabel Service Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED
# ============================================

# Todoist API Token
# Get from: https://todoist.com/app/settings/integrations/developer
TODOIST_API_TOKEN=your_todoist_token_here

# Anthropic API Key
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_key_here

# ============================================
# CLAUDE CONFIGURATION
# ============================================

# Claude model to use for classification
# Options: claude-3-haiku-20240307, claude-3-5-sonnet-20241022, claude-3-opus-20240229
# Default: claude-3-haiku-20240307 (fastest and cheapest)
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Maximum labels to assign per task (default: 5)
MAX_LABELS_PER_TASK=5

# ============================================
# SERVICE CONFIGURATION
# ============================================

# Polling interval in milliseconds (default: 15000 = 15 seconds)
POLL_INTERVAL_MS=15000

# Maximum error log entries before FIFO purge (default: 1000)
MAX_ERROR_LOGS=1000

# SQLite database path (default: ./data/todoist.db)
DB_PATH=./data/todoist.db

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info
