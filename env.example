# Todoist Autolabel Service Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED
# ============================================

# Todoist API Token
# Get from: https://todoist.com/app/settings/integrations/developer
TODOIST_API_TOKEN=your_todoist_token_here

# ============================================
# OPTIONAL
# ============================================

# Anthropic API Key (for Claude Haiku fallback)
# Get from: https://console.anthropic.com/
# If not set, only local ML classification will be used
ANTHROPIC_API_KEY=your_anthropic_key_here

# ============================================
# SERVICE CONFIGURATION
# ============================================

# Polling interval in milliseconds (default: 15000 = 15 seconds)
POLL_INTERVAL_MS=15000

# Minimum confidence threshold for local ML classification (0-1)
# Lower = more labels applied, Higher = more selective
CLASSIFICATION_CONFIDENCE_THRESHOLD=0.6

# Maximum error log entries before FIFO purge (default: 1000)
MAX_ERROR_LOGS=1000

# SQLite database path (default: ./data/todoist.db)
DB_PATH=./data/todoist.db

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

